/**
 * Core Philosophy: This ruleset allows any authenticated user to read and write
 * to the main data collections (students, transactions, feeItems).
 * It reserves write access for administrative collections (summary, roles_admin)
 * for users who have a specific 'admin' role. This allows the app to be
 * fully functional for all logged-in users while protecting sensitive
 * administrative data.
 *
 * Data Structure:
 * - /students/{studentId}: Contains student ledger information.
 * - /transactions/{transactionId}: A log of all financial transactions.
 * - /invoices/{invoiceId}: Contains generated invoice data.
 * - /feeItems/{feeItemId}: Contains billable fee item structures.
 * - /summary/{summaryId}: A singleton document for global financial summaries.
 * - /roles_admin/{userId}: A collection where the existence of a document
 *   indicates that the user is an admin.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    //-------------------------------------------------------------------------
    // Helper Functions
    //-------------------------------------------------------------------------

    /**
     * Checks if the user is authenticated.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * Checks if the user has the 'admin' role.
     * The role is granted if a document with the user's UID exists in the
     * /roles_admin collection.
     */
    function isAdmin() {
      return exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    //-------------------------------------------------------------------------
    // Collection Rules
    //-------------------------------------------------------------------------

    /**
     * @description Manages student records. Any authenticated user can read and write.
     * @path /students/{studentId}
     */
    match /students/{studentId} {
      allow get, list, create, update, delete: if isSignedIn();
    }
    
    /**
     * @description Manages all transactions. Any authenticated user can read and write.
     * @path /transactions/{transactionId}
     */
    match /transactions/{transactionId} {
        allow get, list, create, update, delete: if isSignedIn();
    }

    /**
     * @description Manages fee items. Any authenticated user can read and write.
     * @path /feeItems/{feeItemId}
     */
    match /feeItems/{feeItemId} {
      allow get, list, create, update, delete: if isSignedIn();
    }

    /**
     * @description Manages student invoices. Any authenticated user can read and write.
     * @path /invoices/{invoiceId}
     */
    match /invoices/{invoiceId} {
        allow get, list, create, update, delete: if isSignedIn();
    }

    /**
     * @description Manages a singleton summary document. Only admins can read or write.
     * @path /summary/{summaryId}
     */
    match /summary/{summaryId} {
      allow read, write: if isAdmin();
    }

    /**
     * @description Manages admin role assignments. Only other admins can grant/revoke admin roles.
     * @path /roles_admin/{userId}
     */
    match /roles_admin/{userId} {
      allow read, write: if isAdmin();
    }
  }
}
